<% content_for :title do %>Verify your number<% end %>
<div class="card">
  <div class="title">
    <h3>Verify <%= @formatted_phone %></h3>
  </div>
  <div class="text">
    <p>
      We sent you a text message at <strong><%= @formatted_phone %></strong> with a verification token.  You should receive it within a few minutes.
    </p>

    <%= form_tag authentication_token_path, method: :post do %>
      <%= hidden_field_tag :phone, @phone %>
      <p>
        <label>
          Verification Token
          <%= text_field_tag :token, nil, maxlength: 4, placeholder: 'XXXX', autocomplete: 'off', inputmode: 'numeric', pattern: '[0-9]*' %>
        </label>
      </p>

      <p><%= submit_tag 'Verify' %></p>
    <% end %>
  </div>
</div>
