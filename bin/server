#!/usr/bin/env node
/* eslint-disable global-require */
const path = require('path');
const serverBin = path.resolve(path.join(__dirname, '..', 'support', 'bin', 'server.js'));
const serverSource = path.resolve(path.join(__dirname, '..', 'dist', 'server.js'));

if (process.env.DEV) {
  require('nodemon')({
    script: serverBin,
    watch: [serverSource],
  });
} else {
  require(serverBin);
}
